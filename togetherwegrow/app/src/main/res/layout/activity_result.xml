<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/withdad"
    tools:context=".ActivityResult">

    <TextView
        android:id="@+id/clickRes"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Click Here For Your Plan"
        android:textSize="30sp"
        android:textColor="#0083cc"
        android:layout_marginTop="30dp"
        android:background="@color/transDark"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/activityOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:hint="Your activity at this time"
        android:background="@color/transDark"
        android:textColorHint="@color/white"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/btnSetOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityOne"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="set alarm"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <Button
        android:id="@+id/btnCalOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityOne"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:text="set calendar"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <Button
        android:id="@+id/btnShuffleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityOne"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="shuffle"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <TextView
        android:id="@+id/activityTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="230dp"
        android:hint="Your activity at this time"
        android:layout_centerHorizontal="true"
        android:background="@color/transDark"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/btnSetTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityTwo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="set alarm"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <Button
        android:id="@+id/btnCalTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityTwo"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:text="set calendar"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <Button
        android:id="@+id/btnShuffleTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityTwo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="shuffle"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <TextView
        android:id="@+id/activityThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="360dp"
        android:hint="Your activity at this time"
        android:layout_centerHorizontal="true"
        android:background="@color/transDark"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/btnSetThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityThree"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="set alarm"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <Button
        android:id="@+id/btnCalThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityThree"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:text="set calendar"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <Button
        android:id="@+id/btnShuffleThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityThree"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="shuffle"
        android:textSize="10sp"
        android:backgroundTint="@color/transDark"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginTop="480dp"
        android:hint="Click Activity For Description"
        android:layout_centerHorizontal="true"
        android:background="@color/transDark"
        android:textColorHint="@color/white"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:backgroundTint="@color/transDark">
        </Button>
        <Button
            android:id="@+id/btnBtm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="back to main"
            android:backgroundTint="@color/transDark">
        </Button>
    </LinearLayout>

</RelativeLayout>
