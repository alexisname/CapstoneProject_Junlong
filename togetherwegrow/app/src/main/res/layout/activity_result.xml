<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".ActivityResult">

    <TextView
        android:id="@+id/clickRes"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Click Here For Your Plan"
        android:textSize="30sp"
        android:textColor="@color/teal_700"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/activityOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/teal_700"
        android:layout_marginTop="100dp"
        android:hint="Your activity at this time"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSetOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityOne"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="set alarm"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnCalOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityOne"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:text="set calendar"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnShuffleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityOne"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="shuffle"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/activityTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/teal_700"
        android:layout_marginTop="230dp"
        android:hint="Your activity at this time"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSetTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityTwo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="set alarm"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnCalTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityTwo"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:text="set calendar"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnShuffleTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityTwo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="shuffle"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/activityThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/teal_700"
        android:layout_marginTop="360dp"
        android:hint="Your activity at this time"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSetThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityThree"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="set alarm"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnCalThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityThree"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:text="set calendar"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnShuffleThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityThree"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="shuffle"
        android:textSize="10sp" />




